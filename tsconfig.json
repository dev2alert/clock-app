{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "ES2020",
        "module": "CommonJS",
        "noEmitOnError": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@root/*": ["./*"],
            "@config": ["./config"]
        }
    },
    "exclude": ["./frontend"]
}